{
  "manifest_version": 2,

  "name": "Odoo Debug",
  "description": "Super Simple Extension To Toggle Odoo Developer Mode Using Keyboard Shortcuts (Ctrl+.)",
  "version": "1.0.7",
  "author": "Atul Arvind",
  "homepage_url": "https://atularvind.com",
  "offline_enabled" : true,

  "browser_action": {
     "default_title": "Press Ctrl+. To Toggle Odoo Developer Mode.",
     "default_icon": "debug_off.png"
  },
  "background" : {
    "scripts" : ["odoo_debug.js"]
  },
  "icons": {
      "16": "odoo_debug.png",
      "32": "odoo_debug.png",
      "48": "odoo_debug.png",
      "128": "odoo_debug.png"
  },
  "options_ui": {
    "page": "options.html"
  },
  "commands": {
      "toggle-odoo-debug":{
          "suggested_key":{
              "default": "Ctrl+Period",
              "windows": "Ctrl+Period",
              "mac": "Command+Period",
              "chromeos": "Ctrl+Period",
              "linux": "Ctrl+Period"
          },
           "description": "Toggle Odoo Debug"
      },
      "toggle-odoo-debug-asset":{
          "suggested_key":{
              "default": "Ctrl+Shift+Period",
              "windows": "Ctrl+Shift+Period",
              "mac": "Command+Shift+Period",
              "chromeos": "Ctrl+Shift+Period",
              "linux": "Ctrl+Shift+Period"
          },
           "description": "Toggle Odoo Debug"
      },
      "01-editaction":{
        "description": "Edit Action"
      },
      "02-viewfields":{
        "description": "View Fields"
      },
      "03-managefilters":{
        "description": "Manage Filters"
      },
      "04-technicaltranslation":{
        "description": "Technical Translation"
      },
      "05-setdefaults":{
        "description": "Set Defaults"
      },
      "06-viewmetadata":{
        "description": "View Metadata"
      },
      "07-fieldsviewget":{
        "description": "Fields View Get"
      },
      "08-edittreeformkanbanview":{
        "description": "Edit Tree-Form-Kanban view"
      },
      "09-editsearchview":{
        "description": "Edit Search View"
      }

  },
  "permissions": [
    "http://*/",
    "https://*/",
    "tabs",
    "clipboardWrite",
    "browsingData",
    "storage",
    "bookmarks",
    "sessions"
  ]
}
